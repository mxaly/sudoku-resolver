{
  "extends": "./tsconfig.base.json",
  "include": ["env.d.ts", "client.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}
